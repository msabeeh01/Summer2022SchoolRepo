<%- include ../partials/header.ejs %>


<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="title" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Description</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="description" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Price</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="price" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Author</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Genre</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="genre" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/books" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/footer.ejs %>